<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cenote.sections.CenoteSectionsFragment">

    <LinearLayout
        android:id="@+id/_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnCloseCenoteSections"
                android:layout_width="@dimen/normalIcon"
                android:layout_height="@dimen/normalIcon"
                android:src="@drawable/ic_native_close"
                android:background="?android:attr/selectableItemBackground"
                android:tooltipText="@string/buttonCancel"
                android:layout_gravity="center_vertical"
                tools:targetApi="o"
                app:tint="@color/municipalPrimaryDark"
                android:layout_margin="@dimen/secButtonCloseMargin"/>
            <TextView
                android:id="@+id/txtDescCenoteSections"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/labelCreateNewCenote"
                android:textSize="@dimen/secTitle"
                android:textColor="@color/normalText"
                android:layout_margin="@dimen/secDescMargin"
                android:layout_weight="1"
                android:gravity="end" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/municipalPrimaryDark" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/_desc"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCenoteSections"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
        <ProgressBar
            android:id="@+id/pbCenotesSections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>