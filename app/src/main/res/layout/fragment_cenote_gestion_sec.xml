<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cenote.sections.CenoteUsoSecFragment">

    <LinearLayout
        android:id="@+id/_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnCloseCenoteSection"
                android:layout_width="@dimen/normalIcon"
                android:layout_height="@dimen/normalIcon"
                android:src="@drawable/ic_native_close"
                android:background="?android:attr/selectableItemBackground"
                android:tooltipText="@string/buttonCancel"
                android:layout_gravity="center_vertical"
                tools:targetApi="o"
                app:tint="@color/municipalPrimaryDark"
                android:layout_margin="@dimen/secButtonCloseMargin"
                android:contentDescription="@string/buttonCancel" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/secGestionTitle"
                android:textSize="@dimen/secTitle"
                android:textColor="@color/normalText"
                android:layout_margin="@dimen/secDescMargin"
                android:layout_weight="1"
                android:gravity="end" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/municipalPrimaryDark" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/_desc"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/formPadding"
            android:layout_marginBottom="@dimen/formMargin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/secGestionDesc"
                android:textSize="@dimen/secDesc"
                android:textColor="@color/normalText"
                android:layout_marginBottom="@dimen/secDescMargin" />

            <LinearLayout
                android:id="@+id/chGrpSec1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/formInputsMargin"
                android:padding="@dimen/formInputsPadding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_1"
                    android:textSize="@dimen/formLabels"
                    android:textColor="@color/municipalPrimaryDark" />
                <CheckBox
                    android:id="@+id/chGrpSec1op1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_1.1"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec1op2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_1.2"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec1op3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_1.3"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec1op4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_1.4"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec1op5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_1.5"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec1op6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_1.6"
                    android:textSize="@dimen/formValues" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chGrpSec2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/formInputsMargin"
                android:padding="@dimen/formInputsPadding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_2"
                    android:textSize="@dimen/formLabels"
                    android:textColor="@color/municipalPrimaryDark" />
                <CheckBox
                    android:id="@+id/chGrpSec2op1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_2.1"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec2op2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_2.2"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec2op3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_2.3"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec2op4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_2.4"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec2op5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_2.5"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec2op6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_2.6"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec2op7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_2.7"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec2op8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_2.8"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec2op9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_2.9"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec2op10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_2.10"
                    android:textSize="@dimen/formValues" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chGrpSec3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/formInputsMargin"
                android:padding="@dimen/formInputsPadding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_3"
                    android:textSize="@dimen/formLabels"
                    android:textColor="@color/municipalPrimaryDark" />
                <CheckBox
                    android:id="@+id/chGrpSec3op1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_3.1"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec3op2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_3.2"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec3op3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_3.3"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec3op4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_3.4"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec3op5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_3.5"
                    android:textSize="@dimen/formValues" />
                <CheckBox
                    android:id="@+id/chGrpSec3op6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secGestion_3.6"
                    android:textSize="@dimen/formValues" />
            </LinearLayout>


            <Button
                android:id="@+id/btnSaveData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buttonSave"
                android:layout_marginTop="@dimen/formMargin"
                android:textSize="@dimen/textImportantButton"
                android:textColor="@color/white"
                app:backgroundTint="@color/municipalPrimaryDark"
                android:paddingHorizontal="@dimen/formPadding"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>