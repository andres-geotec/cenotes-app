<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.cenotes.CenoteSavedListFragment">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHeaderContent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCenoteSavedList"
        app:layout_constraintTop_toBottomOf="@id/rvHeaderContent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"/>

    <View
        android:background="@drawable/shadow_bottom"
        app:layout_constraintTop_toBottomOf="@id/rvHeaderContent"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddNewCenote"
        style="@style/Style.FloatingButtonAdd.Cenote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription,MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>