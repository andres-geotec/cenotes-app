<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cenotes.sections.CenoteSectionUsoFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/form_padding"
            android:layout_marginBottom="@dimen/form_margin">
            <TextView
                android:text="@string/cenote_section_uso_desc"
                style="@style/Style.NormalText.Desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioGroup
                style="@style/Style.NormalRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/cenote_section_uso_form_uso_actual"
                    style="@style/Style.NormalFormLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_uso_actual_op1"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_uso_actual_op2"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_uso_actual_op3"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_uso_actual_op4"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <RadioGroup
                style="@style/Style.NormalRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/cenote_section_uso_form_densidad_urbana"
                    style="@style/Style.NormalFormLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:text="@string/cenote_section_uso_form_densidad_urbana_op1"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_densidad_urbana_op2"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_densidad_urbana_op3"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <RadioGroup
                style="@style/Style.NormalRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/cenote_section_uso_form_type_vialidad"
                    style="@style/Style.NormalFormLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_type_vialidad_op1"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_type_vialidad_op2"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_type_vialidad_op3"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_type_vialidad_op4"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_type_vialidad_op5"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <LinearLayout
                style="@style/Style.NormalCheckBoxGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/cenote_section_uso_form_servicios_publicos"
                    style="@style/Style.NormalFormLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:text="@string/cenote_section_uso_form_servicios_publicos_op1"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:text="@string/cenote_section_uso_form_servicios_publicos_op2"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:text="@string/cenote_section_uso_form_servicios_publicos_op3"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/Style.NormalCheckBoxGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/cenote_section_uso_form_ecosistema"
                    style="@style/Style.NormalFormLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:text="@string/cenote_section_uso_form_ecosistema_op1"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:text="@string/cenote_section_uso_form_ecosistema_op2"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:text="@string/cenote_section_uso_form_ecosistema_op3"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:text="@string/cenote_section_uso_form_ecosistema_op4"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RadioGroup
                style="@style/Style.NormalRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/cenote_section_uso_form_vestigios_arqueologicos"
                    style="@style/Style.NormalFormLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_vestigios_arqueologicos_op1"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:text="@string/cenote_section_uso_form_vestigios_arqueologicos_op2"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/cenote_section_uso_form_vestigios_arqueologicos_desc"
                app:hintTextAppearance="@style/Appearance.TextFloatingLabel"
                style="@style/Style.TextFloatingLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Style.NormalInputText.Disabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    style="@style/Style.InputLine"
                    android:layout_width="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnSaveData"
                android:text="@string/button_save"
                style="@style/Style.ImportantButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>