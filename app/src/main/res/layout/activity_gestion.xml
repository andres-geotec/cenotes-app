<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.GestionActivity">

    <LinearLayout
        android:id="@+id/_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sec_gestion_description"
            android:gravity="right"
            android:padding="@dimen/form_padding"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/_description"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/form_padding"
            android:layout_marginBottom="@dimen/form_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/form_inputs_margin"
                android:padding="@dimen/form_inputs_padding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_1"
                    android:textSize="@dimen/form_labels"
                    android:textColor="@color/colorPrimaryDark"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_1.1"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_1.2"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_1.3"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_1.4"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_1.5"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_1.6"
                    android:textSize="@dimen/form_values"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/form_inputs_margin"
                android:padding="@dimen/form_inputs_padding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_2"
                    android:textSize="@dimen/form_labels"
                    android:textColor="@color/colorPrimaryDark"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_2.1"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_2.2"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_2.3"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_2.4"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_2.5"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_2.6"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_2.7"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_2.8"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_2.9"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_2.10"
                    android:textSize="@dimen/form_values"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/form_inputs_margin"
                android:padding="@dimen/form_inputs_padding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_3"
                    android:textSize="@dimen/form_labels"
                    android:textColor="@color/colorPrimaryDark"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_3.1"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_3.2"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_3.3"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_3.4"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_3.5"
                    android:textSize="@dimen/form_values"/>
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sec_gestion_3.6"
                    android:textSize="@dimen/form_values"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/shadow_bottom"
        app:layout_constraintTop_toBottomOf="@id/_description"/>

</androidx.constraintlayout.widget.ConstraintLayout>