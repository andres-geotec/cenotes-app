<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cenotes.sections.CenoteSectionMorfoFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/form_padding"
            android:layout_marginBottom="@dimen/form_margin">
            <TextView
                android:text="@string/cenote_section_morfo_desc"
                style="@style/Style.NormalText.Desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/cenote_section_morfo_form_area"
                app:hintTextAppearance="@style/Appearance.TextFloatingLabel"
                style="@style/Style.TextFloatingLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtCenoteArea"
                    style="@style/Style.NormalInputText.Disabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    style="@style/Style.InputLine"
                    android:layout_width="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/cenote_section_morfo_form_perimetro"
                app:hintTextAppearance="@style/Appearance.TextFloatingLabel"
                style="@style/Style.TextFloatingLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtCenotePerimetro"
                    style="@style/Style.NormalInputText.Disabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    style="@style/Style.InputLine"
                    android:layout_width="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/cenote_section_morfo_form_profundidad"
                app:hintTextAppearance="@style/Appearance.TextFloatingLabel"
                style="@style/Style.TextFloatingLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtCenoteProfundidad"
                    style="@style/Style.NormalInputText.Disabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    style="@style/Style.InputLine"
                    android:layout_width="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/cenote_section_morfo_form_semieje_mayor"
                app:hintTextAppearance="@style/Appearance.TextFloatingLabel"
                style="@style/Style.TextFloatingLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtCenoteSemiMayor"
                    style="@style/Style.NormalInputText.Disabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    style="@style/Style.InputLine"
                    android:layout_width="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/cenote_section_morfo_form_semieje_menor"
                app:hintTextAppearance="@style/Appearance.TextFloatingLabel"
                style="@style/Style.TextFloatingLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtCenoteSemiMenor"
                    style="@style/Style.NormalInputText.Disabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    style="@style/Style.InputLine"
                    android:layout_width="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="@string/cenote_section_morfo_form_elongacion"
                app:hintTextAppearance="@style/Appearance.TextFloatingLabel"
                style="@style/Style.TextFloatingLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtCenoteElongacion"
                    style="@style/Style.NormalInputText.Disabled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    style="@style/Style.InputLine"
                    android:layout_width="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:text="@string/cenote_section_morfo_note_elongacion_required"
                style="@style/Style.NormalText.Notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/label_input_automatic"
                style="@style/Style.NormalText.Notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/cenote_section_morfo_note_elongacion_reference"
                style="@style/Style.NormalText.Notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSaveData"
                android:text="@string/button_save"
                style="@style/Style.ImportantButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>