<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.cenotes.sections.CenoteSectionClasifiFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/form_padding"
            android:layout_marginBottom="@dimen/form_margin">
            <TextView
                android:text="@string/cenote_section_clasifi_desc"
                style="@style/Style.NormalText.Desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/rdGrpGenesis"
                style="@style/Style.NormalRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/cenote_section_clasifi_form_genesis"
                    style="@style/Style.NormalFormLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpGenesisOp1"
                    android:text="@string/cenote_section_clasifi_form_genesis_op1"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpGenesisOp2"
                    android:text="@string/cenote_section_clasifi_form_genesis_op2"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rdGrpGeoforma"
                style="@style/Style.NormalRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/cenote_section_clasifi_form_geoforma"
                    style="@style/Style.NormalFormLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpGeoformaOp1"
                    android:text="@string/cenote_section_clasifi_form_geoforma_op1"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpGeoformaOp2"
                    android:text="@string/cenote_section_clasifi_form_geoforma_op2"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpGeoformaOp3"
                    android:text="@string/cenote_section_clasifi_form_geoforma_op3"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rdGrpType"
                style="@style/Style.NormalRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/cenote_section_clasifi_form_type"
                    style="@style/Style.NormalFormLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpTypeOp1"
                    android:text="@string/cenote_section_clasifi_form_type_op1"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpTypeOp2"
                    android:text="@string/cenote_section_clasifi_form_type_op2"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpTypeOp3"
                    android:text="@string/cenote_section_clasifi_form_type_op3"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rdGrpApertura"
                style="@style/Style.NormalRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/cenote_section_clasifi_form_apertura"
                    style="@style/Style.NormalFormLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpAperturaOp1"
                    android:text="@string/cenote_section_clasifi_form_apertura_op1"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpAperturaOp2"
                    android:text="@string/cenote_section_clasifi_form_apertura_op2"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpAperturaOp3"
                    android:text="@string/cenote_section_clasifi_form_apertura_op3"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpAperturaOp4"
                    android:text="@string/cenote_section_clasifi_form_apertura_op4"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rdGrpAgua"
                style="@style/Style.NormalRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/cenote_section_clasifi_form_agua"
                    style="@style/Style.NormalFormLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpAguaOp1"
                    android:text="@string/cenote_section_clasifi_form_agua_op1"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpAguaOp2"
                    android:text="@string/cenote_section_clasifi_form_agua_op2"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rdGrpAguaOp3"
                    android:text="@string/cenote_section_clasifi_form_agua_op3"
                    android:textAppearance="@style/Style.NormalFormValues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <Button
                android:id="@+id/btnSaveData"
                android:text="@string/button_save"
                style="@style/Style.ImportantButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>