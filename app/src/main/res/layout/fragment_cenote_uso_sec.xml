<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cenote.sections.CenoteUsoSecFragment">

    <LinearLayout
        android:id="@+id/_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnCloseCenoteSection"
                android:layout_width="@dimen/normalIcon"
                android:layout_height="@dimen/normalIcon"
                android:src="@drawable/ic_native_close"
                android:background="?android:attr/selectableItemBackground"
                android:tooltipText="@string/buttonCancel"
                android:layout_gravity="center_vertical"
                tools:targetApi="o"
                app:tint="@color/municipalPrimaryDark"
                android:layout_margin="@dimen/secButtonCloseMargin"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/secUsoTitle"
                android:textSize="@dimen/secTitle"
                android:textColor="@color/normalText"
                android:layout_margin="@dimen/secDescMargin"
                android:layout_weight="1"
                android:gravity="end" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/municipalPrimaryDark" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/_desc"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/formPadding"
            android:layout_marginBottom="@dimen/formMargin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/secUsoDesc"
                android:textSize="@dimen/secDesc"
                android:textColor="@color/normalText"
                android:layout_marginBottom="@dimen/secDescMargin" />

            <RadioGroup
                android:id="@+id/rdGrpSec1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/formInputsMargin"
                android:padding="@dimen/formInputsPadding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_1"
                    android:textSize="@dimen/formValues"
                    android:textColor="@color/municipalPrimaryDark" />
                <RadioButton
                    android:id="@+id/rdGrpSec1op1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_1.1"
                    android:textSize="@dimen/formValues" />
                <RadioButton
                    android:id="@+id/rdGrpSec1op2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_1.2"
                    android:textSize="@dimen/formValues" />
                <RadioButton
                    android:id="@+id/rdGrpSec1op3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_1.3"
                    android:textSize="@dimen/formValues" />
                <RadioButton
                    android:id="@+id/rdGrpSec1op4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_1.4"
                    android:textSize="@dimen/formValues" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rdGrpSec2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/formInputsMargin"
                android:padding="@dimen/formInputsPadding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_2"
                    android:textSize="@dimen/formValues"
                    android:textColor="@color/municipalPrimaryDark" />
                <RadioButton
                    android:id="@+id/rdGrpSec2op1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_2.1"
                    android:textSize="@dimen/formValues" />
                <RadioButton
                    android:id="@+id/rdGrpSec2op2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_2.2"
                    android:textSize="@dimen/formValues" />
                <RadioButton
                    android:id="@+id/rdGrpSec2op3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_2.3"
                    android:textSize="@dimen/formValues" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rdGrpSec3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/formInputsMargin"
                android:padding="@dimen/formInputsPadding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_3"
                    android:textSize="@dimen/formValues"
                    android:textColor="@color/municipalPrimaryDark" />
                <RadioButton
                    android:id="@+id/rdGrpSec3op1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_3.1"
                    android:textSize="@dimen/formValues" />
                <RadioButton
                    android:id="@+id/rdGrpSec3op2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_3.2"
                    android:textSize="@dimen/formValues" />
                <RadioButton
                    android:id="@+id/rdGrpSec3op3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_3.3"
                    android:textSize="@dimen/formValues" />
                <RadioButton
                    android:id="@+id/rdGrpSec3op4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_3.4"
                    android:textSize="@dimen/formValues" />
                <RadioButton
                    android:id="@+id/rdGrpSec3op5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_3.5"
                    android:textSize="@dimen/formValues" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/chGrpSec4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/formInputsMargin"
                android:padding="@dimen/formInputsPadding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_4"
                    android:textSize="@dimen/formLabels"
                    android:textColor="@color/colorPrimaryDark"/>
                <CheckBox
                    android:id="@+id/chGrpSec4op1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_4.1"
                    android:textSize="@dimen/formValues"/>
                <CheckBox
                    android:id="@+id/chGrpSec4op2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_4.2"
                    android:textSize="@dimen/formValues"/>
                <CheckBox
                    android:id="@+id/chGrpSec4op3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_4.3"
                    android:textSize="@dimen/formValues"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chGrpSec5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/formInputsMargin"
                android:padding="@dimen/formInputsPadding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_5"
                    android:textSize="@dimen/formLabels"
                    android:textColor="@color/colorPrimaryDark"/>
                <CheckBox
                    android:id="@+id/chGrpSec5op1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_5.1"
                    android:textSize="@dimen/formValues"/>
                <CheckBox
                    android:id="@+id/chGrpSec5op2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_5.2"
                    android:textSize="@dimen/formValues"/>
                <CheckBox
                    android:id="@+id/chGrpSec5op3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_5.3"
                    android:textSize="@dimen/formValues"/>
                <CheckBox
                    android:id="@+id/chGrpSec5op4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/secUso_5.4"
                    android:textSize="@dimen/formValues"/>
            </LinearLayout>
            

            <Button
                android:id="@+id/btnSaveData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buttonSave"
                android:layout_marginTop="@dimen/formMargin"
                android:textSize="@dimen/textImportantButton"
                android:textColor="@color/white"
                app:backgroundTint="@color/municipalPrimaryDark"
                android:paddingHorizontal="@dimen/formPadding"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>