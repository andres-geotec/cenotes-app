<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools">
    <style name="Style.NormalText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="Style.NormalText.Desc" parent="Style.NormalText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="Style.NormalText.Notes" parent="Style.NormalText">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="Style.NormalFormLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/municipal_primary</item>
        <item name="android:textSize">@dimen/text_form_labels</item>
    </style>

    <style name="Style.NormalFormValues" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:textSize">@dimen/text_form_values</item>
    </style>

    <style name="Style.TextFloatingLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/municipal_primary</item>
        <item name="android:layout_marginBottom">@dimen/form_inputs_margin</item>
        <item name="hintTextColor">@color/municipal_primary</item>
    </style>

    <style name="Appearance.TextFloatingLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_form_labels</item>
    </style>

    <style name="Style.NormalInputText" parent="Style.NormalFormValues">
        <item name="android:textSize">@dimen/text_form_values</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/municipal_primary</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/form_inputs_margin</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Style.NormalInputText.Disabled" parent="Style.NormalInputText">
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/disabled_text</item>
    </style>

    <style name="Style.NormalInputText.IconEdit" parent="Style.NormalInputText">
        <item name="android:drawableRight">@drawable/ic_baseline_edit_24</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_edit_24</item>
    </style>

    <style name="Style.InputLine" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/municipal_primary</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/form_inputs_margin</item>
        <item name="android:layout_marginStart">@dimen/form_inputs_margin</item>
        <item name="android:layout_marginRight">@dimen/form_inputs_margin</item>
        <item name="android:layout_marginEnd">@dimen/form_inputs_margin</item>
    </style>

    <style name="Style.NormalRadioGroup" parent="TextAppearance.AppCompat">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/form_inputs_margin</item>
        <item name="android:padding">@dimen/form_inputs_padding</item>
    </style>

    <style name="Style.NormalCheckBoxGroup" parent="TextAppearance.AppCompat">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/form_inputs_margin</item>
        <item name="android:padding">@dimen/form_inputs_padding</item>
    </style>

    <style name="Style.ImportantButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_marginTop">@dimen/form_margin</item>
        <item name="android:textSize">@dimen/text_important_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/municipal_primary_dark</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Style.FloatingButtonAdd" parent="TextAppearance.AppCompat.Button">
        <item name="android:tint">@color/white</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/municipal_primary_dark</item>
        <item name="borderWidth">0dp</item>
        <item name="android:layout_margin">@dimen/floating_button_margin</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="Style.FloatingButtonAdd.Cenote" parent="Style.FloatingButtonAdd">
        <item name="android:src">@drawable/ic_baseline_post_add_24</item>
        <item name="tooltipText">@string/action_add_new_cenote</item>
        <item name="android:contentDescription">@string/action_add_new_cenote_desc</item>
    </style>

    <style name="Style.FloatingButtonAdd.CenotePhoto" parent="Style.FloatingButtonAdd">
        <item name="android:src">@drawable/ic_baseline_add_a_photo_24</item>
        <item name="tooltipText">@string/action_add_new_photo_cenote</item>
        <item name="android:contentDescription">@string/action_add_new_photo_cenote_desc</item>
    </style>

    <style name="Style.NormalCard" parent="Base.CardView">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/card_margin_vertical</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
    </style>

    <style name="Style.NormalCard.Clickable" parent="Style.NormalCard">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Style.NormalCard.TextTitle" parent="Style.NormalText">
        <item name="android:textSize">@dimen/text_card_title</item>
    </style>

    <style name="Style.NormalCard.TextDetails" parent="Style.NormalText">
        <item name="android:textSize">@dimen/text_card_details</item>
    </style>
</resources>