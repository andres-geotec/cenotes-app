<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo de la pantalla Splash -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/geolanderPrimaryDark</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!-- Estilo sin el Actionbar -->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/municipalPrimary</item>
        <item name="colorPrimaryDark">@color/municipalPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Estilos para txt -->
    <style name="AppTheme.TextFloatingLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">20sp</item>
    </style>
</resources>